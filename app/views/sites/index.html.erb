<h1>Listing sites</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.url %><br/><%= image_tag "http://capture.heartrails.com/?#{site.url}" %></td>
    <td><%= site.title %></td>
    <td><%= site.description %></td>
    <td><%= link_to 'Show', user_site_path(site.user, site) %></td>
    <td><%= link_to 'Edit', edit_user_site_path(site.user, site) %></td>
    <td><%= link_to 'Destroy', user_site_path(site.user, site), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>






